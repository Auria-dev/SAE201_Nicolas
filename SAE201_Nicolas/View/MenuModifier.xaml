<UserControl
    x:Class="SAE201_Nicolas.View.Modifier"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201_Nicolas.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Orientation="Vertical">
        <TextBlock
            HorizontalAlignment="Center"
            FontSize="24"
            Text="Que souhaitez-vous modifier?" />
        <Button
            x:Name="ModifierVin"
            Width="340"
            Height="48"
            Margin="0,24,0,0"
            Click="BtnModifierVinClick"
            Content="Modifier un vin"
            FontSize="16"
            Style="{StaticResource DefaultButton}" />
        <Button
            x:Name="ModifierClient"
            Width="340"
            Height="48"
            Margin="0,24,0,0"
            Click="BtnModifierClientClick"
            Content="Modifier un client"
            FontSize="16"
            Style="{StaticResource DefaultButton}" />
        <Button
            x:Name="ModifierFournisseur"
            Width="340"
            Height="48"
            Margin="0,24,0,0"
            Click="BtnModifierFournisseurClick"
            Content="Modifier un fournisseur"
            FontSize="16"
            Style="{StaticResource DefaultButton}" />
    </StackPanel>
</UserControl>
