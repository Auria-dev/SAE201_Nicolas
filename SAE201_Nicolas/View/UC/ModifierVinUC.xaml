<UserControl x:Class="SAE201_Nicolas.View.UC.ModifierVinUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE201_Nicolas.View.UC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid
    x:Name="dgVins"
    Height="315"
    Margin="0,14,0,0"
    HorizontalAlignment="Stretch"
    AutoGenerateColumns="False"
    IsReadOnly="True"
    ItemsSource="{Binding LesVins}">
            <DataGrid.Columns>
                <DataGridTextColumn
            Width="3.5*"
            Binding="{Binding NomVin}"
            Header="Nom" />
                <DataGridTextColumn
            Width="*"
            Binding="{Binding PrixVin}"
            Header="Prix (€)" />
                <DataGridTextColumn
            Width="*"
            Binding="{Binding Annee}"
            Header="Année" />
                <DataGridTextColumn
            Width="2*"
            Binding="{Binding NomTypeVin}"
            Header="Type de vin" />
                <DataGridTextColumn
            Width="2*"
            Binding="{Binding NomAppelation}"
            Header="Appelation" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
