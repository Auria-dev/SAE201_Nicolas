<UserControl
    x:Class="SAE201_Nicolas.View.UC.ModifierClientUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201_Nicolas.View.UC"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <DataGrid
            x:Name="dgClients"
            Height="460"
            Margin="0,14,0,0"
            HorizontalAlignment="Stretch"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            ItemsSource="{Binding LesClients}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NumClient}"
                    Header="N°" />
                <DataGridTextColumn
                    Width="2*"
                    Binding="{Binding NomClient}"
                    Header="Nom" />
                <DataGridTextColumn
                    Width="2*"
                    Binding="{Binding PrenomClient}"
                    Header="Prenom" />
                <DataGridTextColumn
                    Width="3*"
                    Binding="{Binding MailClient}"
                    Header="Mail" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel
            Margin="0,14,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <Button
                x:Name="butModifClient"
                Width="120"
                Height="50"
                Margin="10,0,10,0"
                HorizontalAlignment="Right"
                Click="butModifClient_Click"
                Content="Modifier"
                FontSize="16"
                Style="{StaticResource DefaultButton}" />
            <Button
                x:Name="butSupClient"
                Width="120"
                Height="50"
                Margin="10,0,10,0"
                HorizontalAlignment="Right"
                Click="butSupClient_Click"
                Content="Supprimer"
                FontSize="16"
                Style="{StaticResource DefaultButton}" />
        </StackPanel>

    </StackPanel>
</UserControl>
