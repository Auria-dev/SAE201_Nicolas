<UserControl
    x:Class="SAE201_Nicolas.View.EspacePersonnel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201_Nicolas.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="550"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel VerticalAlignment="Top" Orientation="Vertical">
        <TextBlock
            HorizontalAlignment="Left"
            FontSize="26"
            Foreground="Black"
            Text=" Espace personnel" />
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">

            <Label
                Margin="8,14,0,0"
                Content="_Nom"
                FontSize="14"
                Target="{Binding ElementName=TxtboxNom}" />
            <TextBox
                x:Name="TxtboxNom"
                Width="380"
                Height="48"
                Style="{StaticResource TextBox}"
                Text="{Binding Nom, ValidatesOnExceptions=True}" />

            <Label
                Margin="8,14,0,0"
                Content="_Prénom"
                FontSize="14"
                Target="{Binding ElementName=TxtboxPrenom}" />
            <TextBox
                x:Name="TxtboxPrenom"
                Width="380"
                Height="48"
                Style="{StaticResource TextBox}"
                Text="{Binding Prenom, ValidatesOnExceptions=True}" />

            <Label
                Margin="8,14,0,0"
                Content="_Login"
                FontSize="14"
                Target="{Binding ElementName=TxtboxMail}" />
            <TextBox
                x:Name="TxtboxMail"
                Width="380"
                Height="48"
                IsEnabled="False"
                IsReadOnly="True"
                Style="{StaticResource TextBox}"
                Text="{Binding Login, ValidatesOnExceptions=True}" />

            <Button
                x:Name="butConfirmer"
                Width="380"
                Height="48"
                Margin="0,34,0,50"
                Click="butConfirmer_Click"
                Content="Confirmer"
                FontSize="16"
                Style="{StaticResource DefaultButton}" />
        </StackPanel>
    </StackPanel>
</UserControl>
