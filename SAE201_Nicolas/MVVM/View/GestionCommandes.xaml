<UserControl
    x:Class="SAE201_Nicolas.MVVM.View.GestionCommandes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:SAE201_Nicolas.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201_Nicolas.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:SAE201_Nicolas.MVVM.Model"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel VerticalAlignment="Top" Orientation="Vertical">
        <TextBlock
            HorizontalAlignment="Left"
            FontSize="26"
            Foreground="Black"
            Text=" Gestion de commandes" />

        <StackPanel
            Margin="0,8,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <TextBox
                x:Name="barDeRechercheCommandes"
                Width="605"
                Height="42"
                Margin="0,0,0,0"
                core:PlaceholderService.Placeholder="Rechercher"
                FontSize="14"
                Style="{StaticResource TextBox}" />
            <Button
                Width="120"
                Height="42"
                Margin="12,0,0,0"
                Click="updateRechercheCommande"
                Content="Rechercher"
                FontSize="14"
                IsDefault="True"
                Style="{StaticResource DefaultButton}" />
        </StackPanel>


        <StackPanel
            Margin="0,14,0,0"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <StackPanel
                Margin="0,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <TextBlock Text="Filre d'état" />
                <StackPanel
                    Height="42"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <ComboBox
                        x:Name="ComboxBoxAppellation"
                        Width="220"
                        Height="40"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        SelectionChanged="updateFiltreAppellationVin"
                        Style="{StaticResource ComboBoxStyle}">
                        <ComboBoxItem IsSelected="True">Tous</ComboBoxItem>
                        <ComboBoxItem>Bordeaux</ComboBoxItem>
                        <ComboBoxItem>Bourgogne</ComboBoxItem>
                        <ComboBoxItem>Champagne</ComboBoxItem>
                        <ComboBoxItem>Alsace</ComboBoxItem>
                        <ComboBoxItem>Beaujolais</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
            <StackPanel
                Margin="24,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <TextBlock Text="Filre de type" />
                <StackPanel
                    Height="42"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">

                        <CheckBox
                            x:Name="FiltreBlanc"
                            VerticalAlignment="Center"
                            Click="updateFiltreTypeVin"
                            IsChecked="True"
                            Style="{StaticResource CheckboxStyle}">
                            Blanc
                        </CheckBox>
                        <CheckBox
                            x:Name="FiltreRouge"
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            Click="updateFiltreTypeVin"
                            IsChecked="True"
                            Style="{StaticResource CheckboxStyle}">
                            Rouge
                        </CheckBox>
                        <CheckBox
                            x:Name="FiltreRose"
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            Click="updateFiltreTypeVin"
                            IsChecked="True"
                            Style="{StaticResource CheckboxStyle}">
                            Rosé
                        </CheckBox>
                        <CheckBox
                            x:Name="FiltreChampagne"
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            Click="updateFiltreTypeVin"
                            IsChecked="True"
                            Style="{StaticResource CheckboxStyle}">
                            Champagne
                        </CheckBox>
                    </StackPanel>

                    <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
                        <CheckBox
                            x:Name="FiltreMousseux"
                            VerticalAlignment="Center"
                            Click="updateFiltreTypeVin"
                            IsChecked="True"
                            Style="{StaticResource CheckboxStyle}">
                            Mousseux
                        </CheckBox>
                        <CheckBox
                            x:Name="FiltreDoux"
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            Click="updateFiltreTypeVin"
                            IsChecked="True"
                            Style="{StaticResource CheckboxStyle}">
                            Doux
                        </CheckBox>
                        <CheckBox
                            x:Name="FiltreLiquoreux"
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            Click="updateFiltreTypeVin"
                            IsChecked="True"
                            Style="{StaticResource CheckboxStyle}">
                            Liquoreux
                        </CheckBox>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

        </StackPanel>
        <DataGrid
            x:Name="dgCommandes"
            Height="350"
            Margin="0,14,0,0"
            HorizontalAlignment="Stretch"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            ItemsSource="{Binding LesDetailsCommandes}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NumCommande}"
                    Header="Num" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NomVin}"
                    Header="Vin" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding AnneeVin}"
                    Header="Année" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding TypeVin}"
                    Header="Type" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding FournisseurVin}"
                    Header="Fournisseur" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Quantite}"
                    Header="Qté" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Prix}"
                    Header="Prix Total" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding EtatCommande}"
                    Header="État" />
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>
