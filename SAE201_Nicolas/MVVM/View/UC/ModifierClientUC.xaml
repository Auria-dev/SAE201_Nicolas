<UserControl x:Class="SAE201_Nicolas.MVVM.View.UC.ModifierClientUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE201_Nicolas.MVVM.View.UC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid
            x:Name="dgClients"
            Height="320"
            Margin="0,14,0,0"
            HorizontalAlignment="Stretch"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            ItemsSource="{Binding LesClients}" Width="600">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NumClient}"
                    Header="N°" />
                <DataGridTextColumn
                    Width="2*"
                    Binding="{Binding NomClient}"
                    Header="Nom" />
                <DataGridTextColumn
                    Width="2*"
                    Binding="{Binding PrenomClient}"
                    Header="Prenom" />
                <DataGridTextColumn
                    Width="3*"
                    Binding="{Binding MailClient}"
                    Header="Mail" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button
                x:Name="butModifClient"
                Width="120"
                Height="50"
                Margin="10,0,10,0"
                Content="Modifier"
                FontSize="16"
                Style="{StaticResource DefaultButton}" HorizontalAlignment="Right" />
            <Button
                x:Name="butSupClient"
                Width="120"
                Height="50"
                Margin="10,0,10,0"
                Content="Supprimer"
                FontSize="16"
                Style="{StaticResource DefaultButton}" HorizontalAlignment="Right" Click="butSupClient_Click" />
        </StackPanel>
        
    </Grid>
</UserControl>
