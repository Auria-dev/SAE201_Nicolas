<UserControl x:Class="SAE201_Nicolas.MVVM.View.UC.ModifierClientUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE201_Nicolas.MVVM.View.UC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid
            x:Name="dgCommandes"
            Height="320"
            Margin="0,14,0,0"
            HorizontalAlignment="Stretch"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            ItemsSource="{Binding LesClients}" Width="600">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NumClient}"
                    Header="N°" />
                <DataGridTextColumn
                    Width="2*"
                    Binding="{Binding NomClient}"
                    Header="Nom" />
                <DataGridTextColumn
                    Width="2*"
                    Binding="{Binding PrenomClient}"
                    Header="Prenom" />
                <DataGridTextColumn
                    Width="3*"
                    Binding="{Binding MailClient}"
                    Header="Mail" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
