<UserControl
    x:Class="SAE201_Nicolas.MVVM.View.UC.AjouterVinUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201_Nicolas.MVVM.View.UC"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock
            Cursor="Hand"
            FontSize="16"
            Foreground="DarkGray"
            MouseDown="ClickedReturn"
            Text="Annuler" />
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="24"
                Text="Ajouter un vin" />
            <Label
                Margin="8,14,0,0"
                Content="_Nom du vin"
                FontSize="14"
                Target="{Binding ElementName=TxtboxNomClient}" />
            <TextBox
                x:Name="TxtboxNomClient"
                Width="380"
                Height="48"
                Style="{StaticResource TextBox}" />

            <Label
                Margin="8,14,0,0"
                Content="_Année"
                FontSize="14"
                Target="{Binding ElementName=TxtboxPrenomClient}" />
            <TextBox
                x:Name="TxtboxPrenomClient"
                Width="380"
                Height="48"
                Style="{StaticResource TextBox}" />

            <StackPanel Margin="8,14,0,0" Orientation="Horizontal">
                <StackPanel Orientation="Vertical">
                    <Label
                        Content="_Prix"
                        FontSize="14"
                        Target="{Binding ElementName=TxtboxMailClient}" />
                    <TextBox
                        x:Name="TxtboxMailClient"
                        Width="180"
                        Height="48"
                        Margin="0,0,12,0"
                        Style="{StaticResource TextBox}" />
                </StackPanel>

                <StackPanel Orientation="Vertical">
                    <Label
                        Content="_Type"
                        FontSize="14"
                        Target="{Binding ElementName=TxtboxMailClient}" />
                    <ComboBox
                        x:Name="TxtboxPrix"
                        Width="180"
                        Height="48"
                        Margin="12,0,0,0">
                        <ComboBoxItem IsSelected="True">Blanc</ComboBoxItem>
                        <ComboBoxItem>Rouge</ComboBoxItem>
                        <ComboBoxItem>Rosé</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
            </StackPanel>


            <Label
                Margin="8,14,0,0"
                Content="_Fournisseur"
                FontSize="14"
                Target="{Binding ElementName=TxtboxPrenomClient}" />
            <ComboBox Width="380" Height="48">
                <ComboBoxItem IsSelected="True">Jean Perrier</ComboBoxItem>
                <ComboBoxItem>Domaine Marnes Blanches</ComboBoxItem>
                <ComboBoxItem>Domaine Esporao</ComboBoxItem>
            </ComboBox>


            <Button
                Width="380"
                Height="48"
                Margin="0,34,0,50"
                Content="Confirmer"
                FontSize="16"
                Style="{StaticResource DefaultButton}" />
        </StackPanel>
    </StackPanel>
</UserControl>
