<UserControl
    x:Class="SAE201_Nicolas.MVVM.View.UC.AjouterFournisseurUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201_Nicolas.MVVM.View.UC"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Orientation="Vertical">
        <TextBlock
            Cursor="Hand"
            FontSize="16"
            Foreground="DarkGray"
            MouseDown="ClickedReturn"
            Text="Annuler" />
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="24"
                Text="Ajouter un fournisseur" />
            <Label
                Margin="8,14,0,0"
                Content="_Nom du fournisseur"
                FontSize="14"
                Target="{Binding ElementName=TxtboxNomFournisseur}" />
            <TextBox
                x:Name="TxtboxNomFournisseur"
                Width="380"
                Height="48"
                Style="{StaticResource TextBox}" />

            <Label
                Margin="8,14,0,0"
                Content="_Address du fournisseur"
                FontSize="14"
                Target="{Binding ElementName=TxtboxAddrFournisseur}" />
            <TextBox
                x:Name="TxtboxAddrFournisseur"
                Width="380"
                Height="48"
                Style="{StaticResource TextBox}" />

            <Label
                Margin="8,14,0,0"
                Content="_Mail du fournisseur"
                FontSize="14"
                Target="{Binding ElementName=TxtboxMailFournisseur}" />
            <TextBox
                x:Name="TxtboxMailFournisseur"
                Width="380"
                Height="48"
                Style="{StaticResource TextBox}" />

            <Button
                Width="380"
                Height="48"
                Margin="0,34,0,50"
                Content="Confirmer"
                FontSize="16"
                Style="{StaticResource DefaultButton}" />
        </StackPanel>
    </StackPanel>

</UserControl>
