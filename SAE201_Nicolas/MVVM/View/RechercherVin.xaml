<UserControl
    x:Class="SAE201_Nicolas.MVVM.View.RechercherVin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201_Nicolas.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:SAE201_Nicolas.MVVM.Model"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel VerticalAlignment="Top">
        <TextBlock
            HorizontalAlignment="Left"
            FontSize="26"
            Foreground="Black"
            Text=" Rechercher des vins" />

        <StackPanel
            Margin="0,8,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <TextBox
                x:Name="BarDeRechercheVins"
                Width="605"
                Height="42"
                Margin="0,0,0,0"
                FontSize="14"
                Style="{StaticResource TextBox}" />
            <Button
                Width="120"
                Height="42"
                Margin="12,0,0,0"
                Content="Rechercher"
                FontSize="14"
                Style="{StaticResource DefaultButton}" />
        </StackPanel>

        <StackPanel Margin="0,14,0,0" Orientation="Horizontal">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <TextBlock Text="Filre de prix (€)" />
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBox
                        x:Name="FiltrePrixMin"
                        Width="75"
                        Height="40"
                        Margin="0,0,0,0"
                        FontSize="14"
                        Style="{StaticResource TextBox}" />

                    <TextBox
                        x:Name="FiltrePrixMax"
                        Width="75"
                        Height="40"
                        Margin="8,0,0,0"
                        FontSize="14"
                        Style="{StaticResource TextBox}" />
                </StackPanel>
            </StackPanel>


            <StackPanel
                Margin="24,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <TextBlock Text="Filre d'appellation" />
                <StackPanel
                    Height="42"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <ComboBox
                        Width="220"
                        Height="40"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <ComboBoxItem IsSelected="True">Tous</ComboBoxItem>
                        <ComboBoxItem>Savoie</ComboBoxItem>
                        <ComboBoxItem>Jura</ComboBoxItem>
                        <ComboBoxItem>Bourgogne</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
            </StackPanel>


            <StackPanel
                Margin="24,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <TextBlock Text="Filre de type" />
                <StackPanel
                    Height="42"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <CheckBox VerticalAlignment="Center">Blanc</CheckBox>
                    <CheckBox Margin="8,0,0,0" VerticalAlignment="Center">Rouge</CheckBox>
                    <CheckBox Margin="8,0,0,0" VerticalAlignment="Center">Rosé</CheckBox>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <DataGrid 
            x:Name="dgVins"
            ItemsSource="{Binding LesVins}" 
            HorizontalAlignment="Center" 
            AutoGenerateColumns="False"
            IsReadOnly="True"
            Margin="0,50,0,0" 
            Height="241" 
            Width="500">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NomVin}"
                    Header="Nom" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding PrixVin}"
                    Header="Prix" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Annee}"
                    Header="Année" />
            </DataGrid.Columns>
        </DataGrid>

    </StackPanel>
</UserControl>
