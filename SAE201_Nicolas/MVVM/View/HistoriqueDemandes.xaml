<UserControl
    x:Class="SAE201_Nicolas.MVVM.View.HistoriqueCommandes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201_Nicolas.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel VerticalAlignment="Top" Orientation="Vertical">
        <TextBlock
            HorizontalAlignment="Left"
            FontSize="26"
            Foreground="Black"
            Text=" Historique des demandes" />

        <StackPanel
            Margin="0,8,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <TextBox
                x:Name="BarDeRechercheVins"
                Width="605"
                Height="42"
                Margin="0,0,0,0"
                FontSize="14"
                Style="{StaticResource TextBox}" />
            <Button
                Width="120"
                Height="42"
                Margin="12,0,0,0"
                Content="Rechercher"
                FontSize="14"
                Style="{StaticResource DefaultButton}" />
        </StackPanel>

        <DataGrid
            x:Name="dgDemandes"
            Height="315"
            Margin="0,14,0,0"
            HorizontalAlignment="Stretch"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            ItemsSource="{Binding LesDemandes}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NumDemande}"
                    Header="Num" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NumVin}"
                    Header="Vin" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NumEmploye}"
                    Header="Employer" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NumCommande}"
                    Header="Commande" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NumClient}"
                    Header="Client" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding DateDemande}"
                    Header="Date" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding QuantiteDemande}"
                    Header="Qté" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NomEtatDemande}"
                    Header="État" />
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>
