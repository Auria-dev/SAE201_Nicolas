<Window
    x:Class="SAE201_Nicolas.ModifierClientWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201_Nicolas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ModifierClientWindow"
    Width="450"
    Height="450"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        Width="400"
        Height="400"
        Background="#fff"
        CornerRadius="30,30,16,16">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="12"
                Opacity="0.3"
                ShadowDepth="0"
                Color="Black" />
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border
                Height="30"
                VerticalAlignment="Center"
                Background="#8f0e2a"
                CornerRadius="16,16,0,0"
                MouseDown="TitleBar_MouseDown">

                <Grid>
                    <TextBlock
                        Margin="20,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Foreground="#efefef"
                        Text="Modifier un client" />
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Ellipse
                            Width="16"
                            Height="16"
                            Margin="0,0,10,0"
                            Cursor="Hand"
                            Fill="#f2be4e"
                            MouseLeftButtonDown="MinimizeEllipse_Click" />
                        <Ellipse
                            Width="16"
                            Height="16"
                            Margin="0,0,10,0"
                            Cursor="Hand"
                            Fill="#ea695d"
                            MouseLeftButtonDown="CloseEllipse_Click" />
                    </StackPanel>
                </Grid>
            </Border>

            <StackPanel
                x:Name="panelFormClient"
                Grid.Row="1"
                HorizontalAlignment="Center"
                Orientation="Vertical">

                <Label
                    Margin="0,20,0,0"
                    Content="_Nom du client"
                    FontSize="14"
                    Target="{Binding ElementName=TxtboxNomClient}" />
                <TextBox
                    x:Name="TxtboxNomClient"
                    Width="330"
                    Height="48"
                    Style="{StaticResource TextBox}"
                    Text="{Binding NomClient, ValidatesOnExceptions=True}" />

                <Label
                    Margin="0,10,0,0"
                    Content="_Prénom du client"
                    FontSize="14"
                    Target="{Binding ElementName=TxtboxPrenomClient}" />
                <TextBox
                    x:Name="TxtboxPrenomClient"
                    Width="330"
                    Height="48"
                    Style="{StaticResource TextBox}"
                    Text="{Binding PrenomClient, ValidatesOnExceptions=True}" />

                <Label
                    Margin="0,10,0,0"
                    Content="_Mail du client"
                    FontSize="14"
                    Target="{Binding ElementName=TxtboxMailClient}" />
                <TextBox
                    x:Name="TxtboxMailClient"
                    Width="330"
                    Height="48"
                    Style="{StaticResource TextBox}"
                    Text="{Binding MailClient, ValidatesOnExceptions=True}" />

                <Button
                    x:Name="butValider"
                    Width="330"
                    Height="48"
                    Margin="0,20,0,50"
                    Click="butAjouterClient_Click"
                    Content="Confirmer"
                    FontSize="16"
                    Style="{StaticResource DefaultButton}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
