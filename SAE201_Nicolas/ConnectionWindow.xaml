<Window
    x:Class="SAE201_Nicolas.ConnectionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201_Nicolas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ConnectionWindow"
    Width="800"
    Height="450"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <StackPanel
            Width="300"
            Height="250"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Label
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Connexion"
                FontSize="20"
                FontWeight="Bold" />
            <Label Content="Nom d'utilisateur" FontSize="16" Margin="0,10,0,0" />
            <TextBox x:Name="tbLogin" FontSize="14" />
            <Label Content="Mot de passe" FontSize="16" Margin="0,10,0,0" />
            <PasswordBox x:Name="pswrdBox" FontSize="14"/>
            <Button x:Name="butConnexion" Content="Se Connecter" FontSize="16" Margin="0,40,0,0" Click="butConnexion_Click"/>
        </StackPanel>

    </Grid>
</Window>
