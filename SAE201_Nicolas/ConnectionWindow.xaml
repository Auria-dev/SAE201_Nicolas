<Window
    x:Class="SAE201_Nicolas.ConnectionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:SAE201_Nicolas.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201_Nicolas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:SAE201_Nicolas.MVVM.Model"
    Title="Application Nicolas"
    Width="1000"
    Height="600"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border
        Margin="0,0,0,10"
        Background="#FFFFFF"
        CornerRadius="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Background="#8f0e2a"
                CornerRadius="16,16,0,0"
                MouseDown="TitleBar_MouseDown">

                <Grid>
                    <TextBlock
                        Margin="20,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Foreground="#efefef"
                        Text="Nicolas - Outil de gestion de demandes et de commandes" />
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Ellipse
                            Width="16"
                            Height="16"
                            Margin="0,0,10,0"
                            Cursor="Hand"
                            Fill="#f2be4e"
                            MouseLeftButtonDown="MinimizeEllipse_Click" />
                        <Ellipse
                            Width="16"
                            Height="16"
                            Margin="0,0,10,0"
                            Cursor="Hand"
                            Fill="#ea695d"
                            MouseLeftButtonDown="CloseEllipse_Click" />
                    </StackPanel>
                </Grid>
            </Border>

            <StackPanel
                Grid.Row="1"
                Width="300"
                Margin="0,0,0,50"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Image Source="/MVVM/Ressources/logo_nicolas.png" />
                <Label
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="Connexion"
                    FontSize="20"
                    FontWeight="Bold" />
                <Label
                    Margin="0,10,0,0"
                    Content="Nom d'utilisateur"
                    FontSize="16" />
                <TextBox
                    x:Name="tbLogin"
                    Height="48"
                    FontSize="14"
                    Style="{StaticResource TextBox}" />
                <Label
                    Margin="0,10,0,0"
                    Content="Mot de passe"
                    FontSize="16" />
                <PasswordBox
                    x:Name="pswrdBox"
                    Height="48"
                    FontSize="14"
                    Style="{StaticResource PasswordBoxStyle}" />
                <Button
                    x:Name="butConnexion"
                    Height="48"
                    Margin="0,40,0,0"
                    Click="butConnexion_Click"
                    Content="Se Connecter"
                    FontSize="16"
                    IsDefault="True"
                    Style="{StaticResource DefaultButton}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
