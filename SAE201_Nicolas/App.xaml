<Application
    x:Class="SAE201_Nicolas.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SAE201_Nicolas"
    xmlns:view="clr-namespace:SAE201_Nicolas.MVVM.View"
    xmlns:viewModel="clr-namespace:SAE201_Nicolas.MVVM.ViewModel"
    xmlns:viewModelUC="clr-namespace:SAE201_Nicolas.MVVM.ViewModel.UC"
    xmlns:viewUC="clr-namespace:SAE201_Nicolas.MVVM.View.UC"
    StartupUri="ConnectionWindow.xaml">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/SidebarMenu.xaml" />
                <ResourceDictionary Source="Theme/TextBox.xaml" />
                <ResourceDictionary Source="Theme/Button.xaml" />
                <ResourceDictionary Source="Theme/ComboBox.xaml" />
                <ResourceDictionary Source="Theme/Checkbox.xaml" />
                <ResourceDictionary Source="Theme/Datagrid.xaml" />
                <ResourceDictionary Source="Theme/PassBox.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModel:RechercherVinViewModel}">
                <view:RechercherVin />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:GestionCommandesViewModel}">
                <view:GestionCommandes />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:HistoriqueCommandesViewModel}">
                <view:HistoriqueCommandes />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:EspacePersonnelViewModel}">
                <view:EspacePersonnel />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:ModifierViewModel}">
                <view:Modifier />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:AjouterViewModel}">
                <view:Ajouter />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModelUC:AjouterClientViewModel}">
                <viewUC:AjouterClientUC />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModelUC:AjouterFournisseurViewModel}">
                <viewUC:AjouterFournisseurUC />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModelUC:AjouterVinViewModel}">
                <viewUC:AjouterVinUC />
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
